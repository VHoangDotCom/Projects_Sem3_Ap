<Page
    x:Class="HelloWorld.Views.PassportRegister"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <TextBlock x:ConnectionId='2' x:Name="Title" Text="Register New Passport User" FontSize="24" Margin="4" TextAlignment="Center"/>

            <TextBlock x:ConnectionId='3' x:Name="ErrorMessage" Text="" FontSize="20" Margin="4" Foreground="Red" TextAlignment="Center"/>

            <TextBlock Text="Enter your new username below" Margin="0,0,0,20"
               TextWrapping="Wrap" Width="300"
               TextAlignment="Center" VerticalAlignment="Center" FontSize="16"/>

            <TextBox x:ConnectionId='4' x:Name="UsernameTextBox" Margin="4" Width="250"/>

            <Button x:ConnectionId='5' x:Name="PassportRegisterButton" Content="Register" Background="DodgerBlue" Foreground="White"
                                           Width="80" HorizontalAlignment="Center" Margin="0,20"/>

            <Border x:ConnectionId='6' x:Name="PassportStatus" Background="#22B14C"
               Margin="4" Height="100">
                <TextBlock x:ConnectionId='7' x:Name="PassportStatusText" Text="Microsoft Passport is ready to use!" FontSize="20"
             Margin="4" TextAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>

