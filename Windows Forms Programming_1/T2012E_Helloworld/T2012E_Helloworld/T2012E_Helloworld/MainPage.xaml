<Page
    x:Class="T2012E_Helloworld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T2012E_Helloworld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <DatePicker Margin="45,33,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <CheckBox Content="Sport" Margin="45,90,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Male" Margin="45,138,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" Header="Username" HorizontalAlignment="Left" Margin="45,175,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="296"/>
        <RadioButton Content="Female" Margin="133,138,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Book" Margin="133,90,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,265,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Login" Margin="45,299,0,0" VerticalAlignment="Top"/>
        <Button Content="Reset" Margin="120,299,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
